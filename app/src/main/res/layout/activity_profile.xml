<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:src="@drawable/tony_stark"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr.Tony Stark"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="2dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtMail"
        android:text="tony.starkindustries.com"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtName"
        android:layout_marginBottom="3dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtPhoneNumber"
        android:text="+011 546 123"
        android:textSize="18sp"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtMail"
        />
    <Button
        android:layout_width="340dp"
        android:layout_marginLeft="29.5dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnMoreinfo"
        android:layout_below="@id/imgTonyStark"
        android:text="MORE INFORMATION"
        android:textStyle = "bold"
        android:textSize="18sp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnExit"
        android:text ="EXIT APPLICATION"
        android:textStyle = "bold"
        android:textSize="18sp"
        android:background="#ff1744"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>